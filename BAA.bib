@article{candal-pedreiraRetractedPapersOriginating2024,
  title = {Retracted Papers Originating from Paper Mills: A Cross-Sectional Analysis of References and Citations},
  shorttitle = {Retracted Papers Originating from Paper Mills},
  author = {{Candal-Pedreira}, Cristina and {Guerra-Tort}, Carla and {Ruano-Ravina}, Alberto and {Freijedo-Farinas}, Fabi{\'a}n and {Rey-Brandariz}, Julia and Ross, Joseph S. and {P{\'e}rez-R{\'i}os}, M{\'o}nica},
