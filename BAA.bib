  pmid = {37256685},
  file = {C:\Users\janni\Zotero\storage\WK2752DV\Májovský et al. - 2023 - Artificial Intelligence Can Generate Fraudulent but Authentic-Looking Scientific Medical Articles P.pdf}
}

